<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mycompany.iorder" >

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:icon="@drawable/iorder_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.NewAccountActivity"
            android:label="@string/title_activity_new_account"
            android:parentActivityName=".Activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mycompany.iorder.iOrderLogin" />
        </activity>
        <activity
            android:name=".Activities.OrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName=".Activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mycompany.iorder.iOrderLogin" />
        </activity>
        <activity
            android:name=".Activities.Sign_inActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".Activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mycompany.iorder.LoginActivity" />
        </activity>
        <activity
            android:name="models.FirstScreen"
            android:label="@string/firstscreen"
            android:parentActivityName=".Activities.Sign_inActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mycompany.iorder.Sign_inActivity" />
        </activity>
        <activity
            android:name="models.SecondScreen"
            android:label="@string/secondscreen"
            android:parentActivityName=".Activities.Sign_inActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="models.FirstScreen" />
        </activity>
        <activity
            android:name="models.ThirdScreen"
            android:label="@string/thirdscreen"
            android:parentActivityName=".Activities.Sign_inActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="models.SecondScreen" />
        </activity>
