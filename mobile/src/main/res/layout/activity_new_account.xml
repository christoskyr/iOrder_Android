<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mycompany.iorder.Activities.NewAccountActivity"
    android:background="#333333">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name_signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_signup"
        android:text="Email"
        android:layout_below="@+id/name_signup"
        android:layout_alignLeft="@+id/name_signup"
        android:layout_alignStart="@+id/name_signup"
        android:layout_marginTop="30dp"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass_signup"
        android:hint="@string/enter_your_pass"
        android:textSize="15dp"
        android:layout_below="@+id/email_signup"
        android:layout_alignLeft="@+id/email_signup"
        android:layout_alignStart="@+id/email_signup"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/email_signup"
        android:layout_alignEnd="@+id/email_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repassword"
        android:hint="@string/repeat_your_pass"
        android:textSize="15dp"
        android:layout_below="@+id/pass_signup"
        android:layout_alignLeft="@+id/pass_signup"
        android:layout_alignStart="@+id/pass_signup"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/pass_signup"
        android:layout_alignEnd="@+id/pass_signup"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button_sign_up"
        android:onClick="signUp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
