<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mycompany.iorder.activities.Sign_inActivity"
    android:background="#FFFFFF">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_signin"
        android:hint="@string/enter_email"
        android:textColorHint="#951A3F"
        android:layout_marginTop="53dp"
        android:textColor="#951A3F"
        android:layout_below="@+id/content"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass_signin"
        android:hint="@string/enter_your_pass"
        android:textColorHint="#951A3F"
        android:textSize="15dp"
        android:textColor="#951A3F"
        android:layout_above="@+id/buttonSign_in"
        android:layout_alignLeft="@+id/email_signin"
        android:layout_alignStart="@+id/email_signin"
        android:layout_marginBottom="34dp"
        android:layout_alignRight="@+id/email_signin"
        android:layout_alignEnd="@+id/email_signin"
        />


    <Button
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:id="@+id/buttonSign_in"
        android:background="#951A3F"
        android:onClick="sign_in"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
