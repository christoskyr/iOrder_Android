<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mycompany.iorder.activities.FinalOrder">

    <ListView
        android:id="@+id/orderedItems"
        android:layout_height="378dp"
        android:layout_width="match_parent" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <Button
                android:layout_width="282dp"
                android:layout_height="wrap_content"
                android:text="Send order"
                android:textColor="#FFFFFF"
                android:background="#951A3F"
                android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Cost:"
            android:id="@+id/TotalCost"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalCost"
            android:layout_alignBottom="@+id/TotalCost"
            android:layout_toRightOf="@+id/TotalCost"
            android:layout_toEndOf="@+id/TotalCost" />

        <!--<Button
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:text="Choose another product"
                android:textColor="#FFFFFF"
                android:id="@+id/button2"
                android:background="#951A3F"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/storeId"
                android:layout_toEndOf="@+id/storeId"
                android:layout_toLeftOf="@+id/button"
                android:layout_toStartOf="@+id/button" />-->
    </RelativeLayout>

</LinearLayout>
